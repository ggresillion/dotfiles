input {
    keyboard {
        xkb {
          layout "us"
          variant "intl"
        }
        repeat-delay 200
        repeat-rate 20
        numlock
    }

    touchpad {
        accel-speed 0
        accel-profile "flat"
    }

    mouse {
        accel-speed 0
        accel-profile "flat"
    }

    trackpoint {
        accel-speed 0
        accel-profile "flat"
    }

    warp-mouse-to-focus
}
